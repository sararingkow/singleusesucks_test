---
const { variant = "primary", size = "medium" } = Astro.props;

const buttonStyling = "rounded-full px-6 p-2 font-lato font-semibold transition transform hover:-translate-y-1 uppercase";

const variantClasses = {
  primary: "bg-[#FF1054] hover:bg-[#B4003C] text-[#FAFAFA]",
  secondary: "bg-[#007C79] hover:bg-[#0A5755] text-[#FAFAFA]",
};

const sizeClasses = {
  large: "text-3xl",
  medium: "text-2xl",
  small: "text-lg",
};
---

<button class:list={[buttonStyling, variantClasses[variant], sizeClasses[size]]}><slot /></button>
